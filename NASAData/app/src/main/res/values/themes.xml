<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASAData" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cosmos</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorSurface">@color/sky_blue</item>
        <item name="bottomAppBarBackgroundTint">@color/cosmos</item>
        <item name="bottomAppBarFABBackgroundTint">@color/sunny</item>
        <item name="textInputHintColor">@color/cosmos</item>
        <item name="fabFullScreenBackgroundTint">@color/light_grey</item>
    </style>
</resources>